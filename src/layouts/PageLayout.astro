---
import HeadlineImage from '../components/HeadlineImage.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
interface Props {
    title: string;
	imgPath: string;
}

const { title, imgPath } = Astro.props;
import '../styles/global.css';
---
<BaseLayout title={title}>
	<article class="page">
		<HeadlineImage title={title} imgPath={imgPath} =/>
		<slot />
	</article>
</BaseLayout>