---
import HeadlineImage from '../components/HeadlineImage.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

interface Props {
    title: string;
    imgPath: string;
    frontmatter?: {
        title: string;
        imgPath: string;
    };
}

const { frontmatter, title: propTitle, imgPath: propImgPath } = Astro.props;
const title = frontmatter?.title || propTitle;
const imgPath = frontmatter?.imgPath || propImgPath;

import '../styles/global.css';
---
<BaseLayout title={title}>
    <article class="page">
        <HeadlineImage title={title} imgPath={imgPath} />
        <slot />
    </article>
</BaseLayout>