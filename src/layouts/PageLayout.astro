---
import HeadlineImage from '../components/HeadlineImage.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const { frontmatter } = Astro.props;

import '../styles/global.css';
---
<BaseLayout title={frontmatter?.title}>
    <article class="page">
        <HeadlineImage title={frontmatter?.title} imgPath={frontmatter?.imgPath} />
        <slot />
    </article>
</BaseLayout>